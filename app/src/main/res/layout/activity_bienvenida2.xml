<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rlPantalla"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Bienvenida2">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/fondo_tuto" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bienvenida2"
        android:orientation="vertical"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:paddingTop="200dp"
        android:paddingHorizontal="30dp"
        android:paddingBottom="30dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/bienvenida2_titulo"
            android:fontFamily="@font/be_vietnam_extrabold"
            android:textColor="@color/blanco"
            android:textSize="30sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/bienvenida2_contenido1"
            android:fontFamily="@font/be_vietnam"
            android:textColor="@color/blanco"
            android:textSize="30sp"
            android:layout_marginVertical="30dp" />

    </LinearLayout>

</RelativeLayout>